#!/usr/bin/env bash
# Bash script to install nginx and serve "Hello World!" at /

set -e

# Install nginx
apt-get update -y
apt-get install -y nginx

# Replace default index.html with "Hello World!"
echo 'Hello World!' > /var/www/html/index.html

# Check nginx config
nginx -t

# Reload nginx gracefully without systemctl
service nginx restart
