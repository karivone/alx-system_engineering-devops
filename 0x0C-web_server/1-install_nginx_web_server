#!/usr/bin/env bash
# Installs nginx and serves "Hello World!" at /

# Exit on any error
set -e

# Install nginx
apt-get update -y
apt-get install -y nginx

# Make sure nginx is started
service nginx start || true

# Overwrite the default index.html to contain ONLY Hello World!
echo -n 'Hello World!' > /var/www/html/index.html
